		"publint": "^0.1.9",
		"rollup": "^4.9.6",
		"rollup-plugin-svelte": "^7.1.6",
		"sass": "^1.70.0",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^1.2.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
